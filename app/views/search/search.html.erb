<% if @model == "user" %>
  <section class="search">
    <div class="col-xs-6 col-xs-offset-3">
      <h3 class="heading">ユーザー検索</h3>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>ニックネーム</th>
            <th>自己紹介</th>
          </tr>
        </thead>
        <tbody>
          <% @records.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user.id) do %>
                  <%= attachment_image_tag user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no_user.jpg", size:'80x80', class: 'user-image' %>
                <% end %>
              </td>
              <td><%= user.nickname %></td>
              <td><%= user.introduction %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </section>
<% end %>

<% if @model == "post" %>
  <section  class="auto">
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <h2 class="heading">投稿検索</h2>
        <!-- 投稿一覧表示 -->
        <%= render 'posts/posts', posts:@posts %>
      </div>
    </div>
  </section>
<% end %>