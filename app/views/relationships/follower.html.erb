<div class="row">
	<div class="col-xs-8 col-xs-offset-2">
		<h2 class="heading">フォロワー</h2>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>ニックネーム</th>
					<th>ひとこと</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @followers.each do |user| %>
				<tr>
					<td>
		                <%= link_to user_path(user.id) do %>
		                  <%= attachment_image_tag user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no_image.jpg", size:'80x80', class: 'user-image' %>
		                <% end %>
					</td>
					<td><%= user.nickname %></td>
					<td><%= user.one_word %></td>
					<td>フォロー数: <%= user.follows.count %></td>
					<td>フォロワー数: <%= user.followers.count %></td>
					<td>
						<% if current_user != user %>
							<%= render 'relationships/relation', user:user %>
						<% end %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>