<div class="row user-show">
	<div class="col-xs-2">
		<!-- 会員情報 -->
		<%= render 'users/user-info', user:@user %>

		<!-- DMへのリンク -->
		<div class="chat">
			<% if @user.id != current_user.id %>
				<% if (current_user.following? @user) && (@user.following? current_user)  %>
					<% if @isRoom == true %>
						<%= link_to 'チャットへ', room_path(@roomId) %>
					<% else %>
						<%= form_for @room do |f| %>
							<%= fields_for @entry do |e| %>
								<%= e.hidden_field :user_id, value: @user.id %>
							<% end %>
							<%= f.submit "チャットを始める", class: 'btn btn-success' %>
						<% end %>
					<% end %>
				<% end %>
			<% end %>
		</div>
	</div>

	<div class="col-xs-8">
		<!-- スライドショー -->
		<div id="slide-box">
		    <div id="slide">
				<% @slide.each do |post| %>
					<% if post.favorited_by?(current_user) %>
						<% post.post_images.each do |image| %>
							<%= attachment_image_tag image, :image %>
						<% end %>
					<% end %>
				<% end %>
		    </div>
		</div>

		<!-- 会員投稿一覧 -->
		<%= render 'posts/posts', posts:@user_posts %>
	</div>
</div>

<script src="/assets/skippr.min.js"></script>
<script src="/assets/slide.js"></script>
