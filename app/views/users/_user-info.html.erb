<table class="table user-info">
	<thead>
		<tr>
			<th>
				<%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_user.jpeg", size:'70x70', class: 'user-image' %>
				<%= user.nickname %>
				<% if user.id == current_user.id %>
					<%= link_to '', edit_user_path(user), class: 'fas fa-user-edit' %>
				<% else %>
					<% if current_user.following?(user) %>
						<%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete %>
					<% else %>
						<%= link_to 'フォローする', user_relationships_path(user.id), method: :POST %>
					<% end %>
				<% end %>
			</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>投稿</td>
		</tr>
		<tr>
			<td>フォロー
				<%= link_to user_follow_path(user.id) do %>
					<%= user.follows.count %>
				<% end %>
			</td>
		</tr>
		<tr>
			<td>フォロワー
				<%= link_to user_follower_path(user.id) do %>
					<%= user.followers.count %>
				<% end %>
			</td>
		</tr>

		<% if user.id == current_user.id %>
		<tr>
			<td><%= link_to 'お気に入り', user_images_path(user) %></td>
		</tr>
		<% end %>
	</tbody>
</table>

