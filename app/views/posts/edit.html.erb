<h1>Posts#edit</h1>
<p>Find me in app/views/posts/edit.html.erb</p>

	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>投稿編集</h1>
			<% if @post.errors.any? %>
				<div id="error_explanation">
					<h2 class="text-danger"><%= @post.errors.count %> 件のエラーです</h2>
					<ul>
						<% @post.errors.full_messages.each do |message| %>
						<li class="text-danger"><%= message %></li>
						<% end %>
					</ul>
				</div>
			<% end %>

			<%= form_for(@post) do |f| %>
				<div class="field">
					<h4>タイトル</h4>
					<%= f.text_field :title, class: "col-xs-12" %>
				</div>
				<div class="field">
					<h4>写真</h4>
					<%= f.attachment_field :post_images_images, multiple: true,  name: "images_attributes[0][image][]" %>
				</div>
				<div class="field">
					<h4>コメント</h4>
					<%= f.text_area :article, class: "col-xs-12" %>
				</div>
				<div class="actions">
					<%= f.submit '変更', class: "btn btn-primary col-xs-12" %>
				</div>
			<% end %>
		</div>
	</div>