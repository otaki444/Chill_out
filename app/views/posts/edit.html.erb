<div class="row post-edit">
	<div class="col-xs-6 col-xs-offset-3 __edit">
		<h2>投稿編集</h2>
		<% if @post.errors.any? %>
			<div id="error_explanation">
				<h2 class="text-danger"><%= @post.errors.count %> 件のエラーです</h2>
				<ul>
					<% @post.errors.full_messages.each do |message| %>
					<li class="text-danger"><%= message %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<%= form_for(@post) do |f| %>
			<div class="field">
				<%= f.label :name, 'タイトル' %><br />
				<%= f.text_field :title, class: "form-control" %>
			</div>
			<div class="field">
				<%= f.label :post_images_images, '写真' %><br />
				<%= f.attachment_field :post_images_images, multiple: true,  name: "images_attributes[0][image][]" %>
			</div>
			<div class="field">
				<h4>タグ</h4>
				<%= f.text_field :tag_list, value: @post.tag_list, placeholder: "複数追加は半角スペースを入れてください", class: '__tag form-control' %>
			</div>
			<div class="field">
				<%= f.label :article, 'コメント' %><br />
				<%= f.text_area :article, class: "form-control" %>
			</div>
			<div class="actions">
				<%= f.submit '変更', class: "btn btn-success form-control" %>
			</div>
		<% end %>
	</div>
</div>