<section  class="auto">
	<div class="row">
		<div class="col-xs-2">
			<!-- 会員情報 -->
			<%= render 'users/user-info', user:current_user %>

			<!-- フォームを開くボタン -->
			<div class="open-form">
				<i class="fas fa-camera-retro __icon" id="post_new"></i>
			</div>
		</div>

		<div class="col-xs-8">
			<!-- 投稿一覧表示 -->
			<%= render 'posts/posts', posts:@posts_tag %>

			<!-- 投稿フォーム -->
			<div class="black-back" id="post_form">
				<div class="new row">
					<i class="fas fa-times" id="close"></i>
					<%= form_with model: @post, html: { class: "col-xs-offset-1" } do |f| %>
						<h2>投稿フォーム</h2>
						<div class="field">
							<h4>タイトル</h4>
							<%= f.text_field :title, class: '__title' %>
						</div>
						<div class="field">
							<h4>写真</h4>
							<%= f.attachment_field :post_images_images, multiple: true,  name: "images_attributes[0][image][]"   %>
						</div>
						<div class="field">
							<h4>タグ</h4>
							<%= f.text_field :tag_list, value: @post.tag_list.join(','), class: '__tag' %>
						</div>
						<div class="field">
							<h4>コメント</h4>
							<%= f.text_area :article, class: '__article' %>
						</div>
						<div class="actions">
							 <%= f.submit '送信', class: 'btn btn-success' %>
						</div>
					<% end %>
				</div>
			</div>
		</div>

		<div class="col-xs-2 tags">
			<!-- 全件タグ表示 -->
			<h3 class="__title">タグ検索</h3>
			<div class="">
				<%= render 'posts/tag_list', tag_list: @posts.tag_counts %>
			</div>
		</div>
	</div>
</section>

<script src="/assets/post_toggle.js"></script>